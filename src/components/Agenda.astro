---
import { Image } from 'astro:assets';
import CaminoScan from '../images/logo-camino-scan.png'
import Gpsolutions from '../images/logo-gpsolutions.png'
---

<section class="py-8 md:py-16 xl:py-24" id="agenda">
    <div class="container">

        <div>
            <div class="font-bold uppercase  mb-4 bg-primary inline-block text-gray-950 px-3 py-2">
                //Agenda
            </div>
            <div class="font-bold uppercase text-4xl md:text-5xl lg:text-7xl tracking-tighter">
                Decode travel in 2 days
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-4 lg:gap-8 mt-8 relative">

            <div data-sal="fade-in" data-sal-delay="250" class="w-full h-2 hidden lg:block bg-gradient-to-r from-gray-900 via-primary to-gray-900 absolute z-0 top-1/2 -translate-y-1"></div>

            <div
                data-sal="fade-in"
                data-sal-duration="250"
                class="bg-gradient-primary border border-gray-700 bg-gray-900 rounded-xl p-4 md:p-6 z-10"
            >
                <div>
                    <div class="uppercase font-bold text-lg font-mono md:text-xl mb-2 text-primary">// Day 01</div>
                    <div class="text-gray-300 mb-2 italic text-lg">April 23</div>
                
                    <div class="uppercase font-bold text-lg md:text-xl">Kick-off</div>
                    
                    <div class="mt-4">
                        <strong class="mr-2 font-mono font-medium">14:00</strong>Kick-off at w3.hub challenge presentations, team get-together
                    </div>
                    
                    <div class="p-3 border border-gray-700 shadow-inner shadow-white/10 rounded-xl mt-4 bg-gray-800">
                        <strong class="mr-2 font-mono font-medium">19:00</strong>Pizza Night <span class="text-gray-300">sponsored by:</span>
                        <Image class="mt-3 h-6 w-auto" src={CaminoScan} alt="CaminoScan Logo"/>
                    </div>
                </div>
            </div>

            <div
                data-sal="fade-in"
                data-sal-duration="250"
                class="bg-gradient-hackerz row-span-1 bg-gray-900 border-2 border-primary md:shadow-primary/50 shadow-2xl rounded-xl p-4 md:p-6 z-10"
            >
                <div>
                    <div class="uppercase font-bold text-lg font-mono md:text-xl mb-2 text-primary">// Day 02</div>
                    <div class="text-gray-300 mb-2 italic text-lg">April 24</div>
                    <p class="uppercase font-bold text-lg md:text-xl mb-2">
                        Hacking
                    </p>
                    <div><strong class="mr-2 font-mono font-medium">09:00</strong>Breakfast</div>
                    <div><strong class="mr-2 font-mono font-medium">09:00</strong>Hackathon</div>
                </div>
            </div>

            <div
                data-sal="fade-in"
                data-sal-duration="250"
                class="bg-gradient-hackerz row-span-1 bg-gray-900 border-2 border-primary md:shadow-primary/50 shadow-2xl rounded-xl p-4 md:p-6 z-10"
            >
                <div>
                    <div class="uppercase font-bold font-mono text-lg md:text-xl mb-2 text-primary">// Day 03</div>
                    <div class="text-gray-300 mb-2 italic text-lg">April 25</div>
                    <p class="uppercase font-bold text-lg md:text-xl mb-2">
                        Hacking
                    </p>

                    <div><strong class="mr-2 font-mono font-medium">09:00</strong>Breakfast</div>
                    <div><strong class="mr-2 font-mono font-medium">09:00</strong>Hackathon</div>
                    <div><strong class="mr-2 font-mono font-medium">19:00</strong>Pitch Deadline</div>
                    
                    <div class="p-3 border border-gray-700 shadow-inner shadow-white/10 rounded-xl mt-4 bg-gray-800">
                        <strong class="mr-2 font-mono font-medium">20:00</strong>Ramen Night <span class="text-gray-300">sponsored by:</span>
                        <Image class="mt-3 h-6 w-auto" src={Gpsolutions} alt="CaminoScan Logo"/>
                    </div>
                </div>
            </div>

            <div
                data-sal="fade-in"
                data-sal-duration="250"
                class="bg-gradient-primary border border-gray-700 bg-gray-900 rounded-xl order-last lg:-order-none p-4 md:p-6 z-10"
            >
                <div>
                    <div class="uppercase font-bold text-lg font-mono md:text-xl mb-2 text-primary">// Day 04</div>
                    <div class="text-gray-300 mb-2 italic text-lg">April 26</div>
                        <p class="uppercase font-bold text-lg md:text-xl mb-2">
                            Pitches
                        </p>
                        <div><strong class="mr-2 font-mono font-medium">09:00</strong>Breakfast</div>
                        <div><strong class="mr-2 font-mono font-medium">10:00</strong>Pitch kick-off</div>
                        <div><strong class="mr-2 font-mono font-medium">14:00</strong>Award cerenomy</div>
                </div>
            </div>
    </div>
</section>