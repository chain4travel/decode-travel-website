---
import { Image } from 'astro:assets';
import DecodeLogo from '../images/decode-logo-left.png';
---

<header class="py-4 lg:py-6 border-b border-gray-800 bg-gray-950/80 backdrop-blur-lg z-50 sticky top-0" x-data="{ menuOpen: false }">
    <div class="container flex justify-between items-center">

        <a href="/">
            <Image class="w-auto h-7 lg:h-8" src={DecodeLogo} alt="Decode Travel Logo"/>
        </a>

        <div class="w-12 h-12 p-3 hover:bg-gray-800 rounded flex items-center justify-center hover:text-white relative lg:hidden" @click="menuOpen = !menuOpen" tabindex="0">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path fill="currentColor" d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z"/>
            </svg>

            <nav
                class="uppercase text-sm absolute bg-gray-800 right-0 top-14 p-4 rounded-lg"
                x-cloak
                x-show="menuOpen"
                x-transition.duration.250ms
                @click.away="menuOpen = false"
            >
                <a class="inline-block p-3 hover: rounded" href="#why">Why</a>
                <a class="inline-block p-3 hover: rounded" href="#agenda">Agenda</a>
                <a class="inline-block p-3 hover: rounded" href="#challenges">Challenges</a>
                <a class="inline-block p-3 hover: rounded" href="#partners">Partners</a>
                <a class="inline-block p-3 w-full text-center bg-primary text-gray-950 rounded" href="/#apply">Join now</a>
            </nav>
        </div>

        <nav class="uppercase hidden lg:block">
            <a class="inline-block px-3 py-2 hover: rounded" href="#why">Why</a>
            <a class="inline-block px-3 py-2 hover: rounded" href="#agenda">Agenda</a>
            <a class="inline-block px-3 py-2 hover: rounded" href="#challenges">Challenges</a>
            <a class="inline-block px-3 py-2 hover: rounded" href="#partners">Partners</a>
            <a class="inline-block px-3 py-2 bg-primary text-gray-950 rounded font-semibold" href="/#apply">Join now</a>
        </nav>

    </div>
</header>